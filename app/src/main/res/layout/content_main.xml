<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main"
        tools:context=".Activity.MainActivity" android:gravity="center|center_horizontal" android:orientation="vertical">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:gravity="end">

        <TextView
                android:id="@+id/tv_deck_label"
                android:textSize="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">
            <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    tools:srcCompat="@drawable/flag_default_1_300x200"
                    android:id="@+id/iv_deck_img_1"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/flag_default_1_300x200"/>
            <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    tools:srcCompat="@drawable/flag_default_2_300x200"
                    android:id="@+id/iv_deck_img_2"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/flag_default_2_300x200"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end">
        <Button
                android:id="@+id/bt_show_word_card"
                android:text="MONTRER CARTES"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_base_background"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
                android:text="TOUT LE PAQUET"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_base_background"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:id="@+id/bt_show_all_words"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
                android:text="STATISTIQUES"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_base_background"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:id="@+id/bt_stats"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <Button
                android:padding="50dp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_base_background"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/bt_add_word"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:foreground="@drawable/ic_plus_90"/>
    </LinearLayout>

</LinearLayout>